{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-12">
            <h1 class="p-3">Nous contacter</h1>
            <hr>
            <div class="row">
                <div class="col-sm-6 mx-auto">
                    <div>
                        {% for message in app.flashes('success') %}
                            <div class="alert alert-success">{{ message }}</div>
                        {% endfor %}
                    </div>
                    {{ form(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

